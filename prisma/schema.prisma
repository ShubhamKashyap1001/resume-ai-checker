generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Resume {
  id                     Int      @id @default(autoincrement())

  // Resume content
  resumeText             String
  rawText                String?
  resumePdfUrl String?


  // Job description
  jobDescription         String

  // Scores
  skillMatch             Float
  experienceScore        Float
  atsScore               Float
  grammarScore           Float
  ruleScore              Int
  finalScore             Float
  rating                 String

  // Analysis
  strengths              String[]
  weaknesses             String[]
  missingSkills          String[]
  improvementSuggestions String[]
  finalVerdict           String?

  //NEW (ResumeWorded-style)
  lineAnalysis           Json?

  createdAt              DateTime @default(now())
}
